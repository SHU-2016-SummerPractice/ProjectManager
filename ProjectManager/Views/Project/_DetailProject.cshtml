@using ProjectManager.Models;
@model List<DetailProject>
@{
    Layout = null;
    int count=0;
}


    @if(Model.Count != 0)
    {
        for(int j=0 ; j < Model.Count ; j += count)
        {
                //PB数目
            count = Model.FindAll(delegate(DetailProject detail) { return detail.ProjectID == Model[j].ProjectID; }).Count;
            //设置id为projectId
            <div id="@Model[j].ProjectID" style="display:none;">
                <table class="table table-striped">
                    <tr>
                        <th>LO</th>
                        <th>IsLanuched</th>
                        <th>CNPMId</th>
                        <th>EndDate</th>
                        <th>DelayReleaseDate</th>
                        <th>DelayLanuchDate</th>
                    </tr>
                    <tr>
                        <td>@Model[j].LO</td>
                        <td>@Model[j].IsLanuched</td>
                        <td>@Model[j].CNPMId</td>
                        <td>@Model[j].EndDate</td>
                        <td>@Model[j].DelayReleaseDate</td>
                        <td>@Model[j].DelayLanuchDate</td>
                    </tr>
                    <tr>
                        <th>
                            PBName
                        </th>
                        <td colspan="5">
                            @for(int i=j ; i < j + count ; i++)
                            {
                                @Model[i].PBName <br>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        }
    }
            